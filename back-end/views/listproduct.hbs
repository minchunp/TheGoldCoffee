<script>
   // Lấy tất cả các phần tử có class là "priceSP"
   const priceElements = document.querySelectorAll('.priceSP');

   // Duyệt qua từng phần tử và biến đổi nội dung của chúng
   priceElements.forEach(element => {
      // Lấy nội dung hiện tại của phần tử
      const currentText = element.textContent;

      // Biến đổi nội dung sang dạng số
      const number = parseInt(currentText.replace(/\D/g, ''), 10);

      // Định dạng lại số
      const formattedNumber = number.toLocaleString('vi-VN');

      // Thêm ký tự "đ" vào sau số
      const formattedText = formattedNumber + " đ";

      // Gán lại nội dung đã định dạng cho phần tử
      element.textContent = formattedText;
   });

</script>



